COMPONENT_DIR = "//base/security/asset"

ohos_shared_library("asset_napi") {
    include_dirs = [
        "inc",
    ]

    sources = [
        "src/asset_napi.cpp",
        "src/asset_napi_add.cpp",
        "src/asset_napi_common.cpp",
        "src/asset_napi_get_version.cpp",
        "src/asset_napi_post_query.cpp",
