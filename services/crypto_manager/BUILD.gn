import("//build/ohos.gni")
import("//build/test.gni")
SUBSYSTEM_DIR = "//base/security/asset"

ohos_rust_shared_library("crypto_manager") {
  sources = [
    "src/hukkey.rs",
    "src/hukkey_ffi.rs",
    "src/lib.rs",
  ]

  deps = [ "$SUBSYSTEM_DIR/frameworks/common:asset_common_lib" ]

  external_deps = [
    "hilog:hilog_rust",
    "huks:libhukssdk",
  ]

  crate_name = "crypto_manager"
  crate_type = "dylib"

  subsystem_name = "security"
  part_name = "asset"
}

module_output_path = "asset/crypto_manager"

ohos_rust_unittest("crypto_manager_test") {
  module_out_path = module_output_path
  sources = [ "tests/test_hukkey.rs" ]
  deps = [ "$SUBSYSTEM_DIR/services/crypto_manager:crypto_manager" ]
  subsystem_name = "security"
  part_name = "asset"
}
